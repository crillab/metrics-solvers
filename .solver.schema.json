{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "id": { "type": "string" },
    "description": { "type": "string" },
    "website": { "type": "string", "format": "uri" },
    "language": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "system": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": { "type": "string" }
        }
      ]
    },
    "build": {
      "type": "object",
      "properties": {
        "mode": { "type": "string", "enum": ["manual", "auto"] },
        "default_steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "cmd": { "type": "string" },
              "cwd": { "type": "string" }
            },
            "required": ["cmd"],
            "additionalProperties": false
          }
        },
        "per_os": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "steps": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "cmd": { "type": "string" },
                    "cwd": { "type": "string" }
                  },
                  "required": ["cmd"],
                  "additionalProperties": false
                }
              },
              "skip": { "type": "boolean" }
            },
            "additionalProperties": false
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "git": { "type": "string", "format": "uri" },
              "url": { "type": "string", "format": "uri" },
              "dir": { "type": "string" }
            },
            "required": ["dir"],
            "additionalProperties": false
          }
        }
      },
      "required": ["mode"],
      "additionalProperties": false
    },
    "command": {
      "type": "object",
      "properties": {
        "prefix": { "type": "string" },
        "template": { "type": "string" },
        "always_include_options": { "type": "string" },
        "options": {
          "type": "object",
          "additionalProperties": { "type": ["string", "null"] }
        }
      },
      "required": ["template"],
      "additionalProperties": false
    },
    "versions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "version": { "type": "string" },
          "alias": {
            "type": "array",
            "items": { "type": "string" }
          },
          "executable": { "type": "string" },
          "git_tag": { "type": "string" },
          "source": { "type": "string", "enum": ["git", "archive"] },
          "urls": {
            "type": "object",
            "additionalProperties": { "type": "string", "format": "uri" }
          },
          "files": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "from": { "type": "string" },
                "to": { "type": "string" }
              },
              "required": ["from", "to"],
              "additionalProperties": false
            }
          }
        },
        "required": ["version", "executable"],
        "additionalProperties": false
      }
    },
    "parsing": {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "log-data": { "type": "string" },
              "file": { "type": "string" },
              "pattern": { "type": "string" },
              "regex": { "type": "string" },
              "groups": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "bound_list": { "type": "integer" },
                      "timestamp_list": { "type": "integer" }
                    },
                    "additionalProperties": false
                  },
                  {
                    "type": "array",
                    "items": { "type": "integer" }
                  }
                ]
              }
            },
            "required": ["file"],
            "oneOf": [
              { "required": ["pattern"] },
              { "required": ["regex"] }
            ],
            "additionalProperties": false
          }
        }
      },
      "required": ["data"],
      "additionalProperties": false
    },
    "git": { "type": "string", "format": "uri" },
    "path": { "type": "string" }
  },
  "required": ["name", "id", "language", "system", "build", "versions"],
  "oneOf": [
    { "required": ["git"], "not": { "required": ["path"] } },
    { "required": ["path"], "not": { "required": ["git"] } }
  ],
  "additionalProperties": false
}
